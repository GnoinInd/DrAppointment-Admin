    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/stillNotReceivedOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="still not received OTP?"
        android:textColor="@color/skyBlue" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stillNotReceivedOTP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="Resend OTP in 00:15"
        android:textColor="@color/black"
        app:drawableStartCompat="@drawable/access_time" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/resendOTP"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/stillNotReceivedOTP"
        android:layout_marginStart="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/box"
        android:elevation="30dp"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="Resend OTP"
        android:textAllCaps="false"
        android:textColor="@color/upperBlue"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitOTP"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/stillNotReceivedOTP"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/box"
        android:elevation="30dp"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:text="Submit OTP"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

