<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor_perspective.DoctorProfileActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/subCard1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/skyBlue">


        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/a0" />

        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:text="SPD-7892"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="100dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:text="Mr Alpha"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/subCard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subCard1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/hospitalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Hospital Name"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/hospitalName"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hospitalName"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Location"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/location"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="City"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/city"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/city"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Area"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/area"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/area"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Specialization"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/specialization"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/sub_specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/specialization"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Sub-Specialization"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/sub_specialization"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_specialization"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Designation"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/designation"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/designation"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="ID"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/id"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Name"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/name"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/regNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Reg No."
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/regNo"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/regNo"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Password"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/password"
                android:layout_marginHorizontal="20dp"
                android:background="?android:attr/listDivider" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/reEnterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:drawableEnd="@drawable/arrow_right"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:paddingHorizontal="15dp"
                android:text="Re enter Password"
                android:textColor="@color/skyBlue"
                android:textSize="15sp" />


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


      <com.google.android.material.button.MaterialButton
        android:id="@+id/nextButton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@id/subCard2"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="30dp"
        android:background="@drawable/box"
        android:elevation="30dp"
        android:fontFamily="@font/poppins"
        android:includeFontPadding="false"
        android:layout_centerHorizontal="true"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>